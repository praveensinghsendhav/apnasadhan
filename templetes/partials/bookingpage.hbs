    <div class="bdemail bddata">
      <label for="email">Email:</label> 
      <input type="email" id="bemail" placeholder="Enter Email" name="email" required>
    </div> 
    <div class="bdfullname bddata">
      <label for="fullname">Full Name:</label> 
      <input type="text" id="fullname" placeholder="Enter FullName" name="fullname" required>
    </div> 
    <div class="bdpickuploc bddata">
      <label for="pickuploc">Pickup Location:</label> 
